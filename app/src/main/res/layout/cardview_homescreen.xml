<?xml version="1.0" encoding="utf-8"?>

<!--Darstellung der einzelnen Bestellungen als "Karte".-->
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:gravity="center">

    <androidx.cardview.widget.CardView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:cardCornerRadius="7dp"
        app:cardUseCompatPadding="true">

        <LinearLayout
            android:layout_width="250dp"
            android:layout_height="wrap_content"
            android:gravity="center_vertical"
            android:layout_gravity="center"
            android:padding="5dp"
            android:orientation="horizontal">

            <!--Bestellname also "Bestellung 1" z.B.-->
            <TextView
                android:id="@+id/itemName_homescreen"
                android:layout_width="150dp"
                android:layout_height="wrap_content"
                android:layout_marginVertical="15dp"
                android:layout_marginStart="5dp"
                android:text="@string/Bestellungen"
                android:textColor="@color/black"
                android:textSize="16sp" />

            <!--Bestellmenge-->
            <TextView
                android:id="@+id/itemMenge_homescreen"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginStart="0dp"
                android:layout_marginEnd="10dp"
                android:textAlignment="textEnd"
                android:text="@string/Menge"
                android:textColor="@color/black"
                android:textSize="16sp" />
        </LinearLayout>

    </androidx.cardview.widget.CardView>

</LinearLayout>